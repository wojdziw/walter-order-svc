{
    "compilerOptions": {
        "lib": ["es2015", "es2016", "es2017"],
        "outDir": "build",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules",
        "build",
        "src/**/*.test.ts",
        "src/**/*.spec.ts"
    ]
}
